<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JTM2_Passwords_Mobile_App.PasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="hiddenId" IsVisible="False"/>

            <Label Text="Site"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="siteEntry"></Entry>
            <Label Text="Password"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="passwordEntry"></Entry>
            <Label Text="URL"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="urlEntry"></Entry>
            <Label Text="Notes"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="notesEntry"></Entry>
            <Button x:Name="saveBtn" Text="Save" Clicked="saveBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>